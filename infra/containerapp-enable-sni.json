{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.38.33.27573",
      "templateHash": "8419262466456124753"
    }
  },
  "parameters": {
    "containerAppName": {
      "type": "string",
      "minLength": 3,
      "metadata": {
        "description": "Name of the Azure Container App to bind the managed certificate to."
      }
    },
    "hostname": {
      "type": "string",
      "minLength": 4,
      "maxLength": 253,
      "metadata": {
        "description": "Fully qualified domain name to bind to the container app."
      }
    },
    "certificateId": {
      "type": "string",
      "minLength": 1,
      "metadata": {
        "description": "Resource ID of the managed certificate to use for the binding."
      }
    }
  },
  "resources": [
    {
      "type": "Microsoft.App/containerApps/customDomains",
      "apiVersion": "2024-03-01",
      "name": "[format('{0}/{1}', parameters('containerAppName'), parameters('hostname'))]",
      "properties": {
        "bindingType": "SniEnabled",
        "certificateId": "[parameters('certificateId')]"
      }
    }
  ]
}